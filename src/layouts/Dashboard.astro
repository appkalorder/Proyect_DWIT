---
import '@styles/global.css';
import LineChart from '@components/LineChart.jsx';
import "@styles/global.css";
import Header from "@components/Header.astro";
import Panel from "@components/PanelBody.astro";
import user from "@data/user.json";
import { getLatestMeasurements } from '@scripts/obtener-medidas.js';
import Button from "@components/SubmitMeasurements.astro"
import Modal from "@components/ModalFormNewMeasure.astro"
import UserMenu from '@components/UserMenu.astro';

// Datos calculados
const startDate = new Date(user.time_taining);
const now = new Date();
let yearsTraining = now.getFullYear() - startDate.getFullYear();
if (now.getMonth() < startDate.getMonth() || 
   (now.getMonth() === startDate.getMonth() && now.getDate() < startDate.getDate())) {
  yearsTraining -= 1;
}

// Obtener medidas
const measurements = await getLatestMeasurements();

// IMC
const heightM = parseFloat(measurements.measurements.find(m => m.label === "Altura")?.value ?? 0);
const weight = parseFloat(measurements.measurements.find(m => m.label === "Peso")?.value ?? 0);
const IMC = (heightM > 0 && weight > 0) 
  ? (weight / (heightM * heightM)).toFixed(2)
  : "N/A";
interface Props {
  currentPage?: string;
}

const { currentPage = 'other' } = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FitTracker</title>
    <link rel="shortcut icon" type="image/svg+xml" href="/favicon.svg">
  </head>
  <body class=" duration-200">
    <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
      <!-- Sidebar -->
      <aside
        id="sidebar"
        class="fixed top-0 left-0 z-40 w-48 h-screen transition-transform duration-300 ease-in-out -translate-x-full sm:translate-x-0"
      >
        <div
